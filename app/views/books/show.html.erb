<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
  <% if @book.user.profile_image.attached? %>
    <%= image_tag @book.user.get_profile_image(100,100) %>
  <% else %>
    <%= image_tag 'default-image.jpeg', size: "100x100" %>
  <% end %>
  <table class="table">
    <tr>
      <th>name</th><th><%=@book.user.name%></th>
    </tr>
    <tr>
      <th>introduction</th><th><%=@book.user.introduction%></th>
    </tr>

  </table>
  <div class="row">
    <%= link_to edit_user_path(@book.user), class: "btn btn-outline-secondary btn-block" do %>
    <i class="fas fa-user-cog"></i>
    <% end %>
  </div>
<%= render 'form', book: Book.new %>
</div>
<div class="col-md-8 offset-md-1">
  		<h2>Book detail</h2>
  		<table class="table">
  		  <tbody><tr>
         <td><%= link_to user_path(@book.user) do %><%= image_tag @book.user.get_profile_image(100,100) %><%= @book.user.name %> <% end %></td>
         <td><%= link_to book_path(@book.id) do %><%= @book.title %><% end %></td>
         <td><%= @book.body %></td>
         <td><% if @book.user == current_user %><%= link_to edit_book_path, class: "btn btn-sm btn-success" do %>Edit<% end %><% end %></td>
         <td><% if @book.user == current_user %><%= link_to book_path, class: "btn btn-sm btn-danger",method: :delete do %>Destroy<% end %><% end %></td>
      </tr></tbody></table>
    </div></div>