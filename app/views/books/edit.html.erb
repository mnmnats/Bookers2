
<div class= "container">
  <div class= "row">
    <div class= "col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
      <% if @book.errors.any? %>
  <h3><%= @book.errors.count %>errors prohibited this obj from being saved:</h3>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
      <%= form_with model: @book do |f| %>
      <div class ="form-group">
      <label for = "inputTitle">Title</label>
      <%= f.text_field :title, outofocus: true, id:"inputTitle" %>
      </div>
      <div class ="form-group">
      <label for = "inputOpinion">Opinion</label>
      <%= f.text_area :body, outofocus: true, id:"inputOpinion" %>
      </div>
      <div class = "form-group">
      <%= f.submit "Update Book" %>
      </div>
      <% end %>
      <%= link_to book_path(@book.id) do %>Show<% end %>
      |
      <%= link_to books_path do %>Back<% end %>

    </div>
  </div>
</div>